		"flowbite-svelte": "1.0.0-next.20",
		"flowbite-svelte-icons": "^2.1.1",
		"lucide-svelte": "^0.510.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.28.2",
		"svelte-5-ui-lib": "^0.12.6",
		"svelte-check": "^4.1.7",
