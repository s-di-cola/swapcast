	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"env:start": "../scripts/local/start.sh",
		"env:stop": "../scripts/local/stop.sh",
		"dev:local": "npm run env:start && vite dev",
		"test:local": "npm run env:start && playwright test",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
